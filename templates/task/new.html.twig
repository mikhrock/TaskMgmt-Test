{% extends 'layout.html.twig' %}

{% block body_id 'task_new' %}

{% block main %}
    <h1>{{ 'title.task_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.start_time) }}
        {{ form_row(form.end_time) }}
        {{ form_row(form.assigned_person) }}
        {{ form_row(form.status) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_task'|trans }}
        </button>

        <a href="{{ path('task_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
